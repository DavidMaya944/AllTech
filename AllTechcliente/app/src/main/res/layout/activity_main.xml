<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="322dp"
        android:layout_height="88dp"
        android:layout_marginStart="@dimen/sep_lateral"
        android:layout_marginLeft="@dimen/sep_lateral"
        android:layout_marginTop="@dimen/sep_horizontal"
        android:layout_marginEnd="@dimen/sep_lateral"
        android:layout_marginRight="@dimen/sep_lateral"
        android:textSize="@dimen/lblBienvenido_Size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/lbl_bienvenido" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sep_lateral"
        android:layout_marginLeft="@dimen/sep_lateral"
        android:layout_marginTop="@dimen/sep_horizontal"
        android:layout_marginEnd="@dimen/sep_lateral"
        android:layout_marginRight="@dimen/sep_lateral"
        android:text="@string/btn_registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sep_lateral"
        android:layout_marginLeft="@dimen/sep_lateral"
        android:layout_marginTop="@dimen/sep_horizontal"
        android:layout_marginEnd="@dimen/sep_lateral"
        android:layout_marginRight="@dimen/sep_lateral"
        android:text="@string/btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistro" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sep_lateral"
        android:layout_marginLeft="@dimen/sep_lateral"
        android:layout_marginTop="@dimen/sep_horizontal"
        android:layout_marginEnd="@dimen/sep_lateral"
        android:layout_marginRight="@dimen/sep_lateral"
        android:text="@string/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBienvenido" />
</androidx.constraintlayout.widget.ConstraintLayout>