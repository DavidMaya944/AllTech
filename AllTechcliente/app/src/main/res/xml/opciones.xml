<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_prefer_credenciales">

        <EditTextPreference
            app:defaultValue="true"
            app:key="@string/key_email_pref"
            app:title="@string/title_email_pref" />

        <EditTextPreference
            app:defaultValue="true"
            app:key="@string/key_pass_pref"
            app:title="@string/title_pass_pref" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Volumen">
        <SwitchPreference
            app:key="@string/key_mute"
            app:title="@string/title_mute_pref"
            app:defaultValue="true" />

    </PreferenceCategory>


</PreferenceScreen>